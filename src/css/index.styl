.cool-document
    width:100%;
    height:100%;
    position:absolute;

.cool-ui-component
    width:100px;
    height:100px;
    border:1px solid #ccc;
    position:absolute;
    .cool-content,.cool-canvas
        width:100%;
        height:100%;
        position:absolute;
    .cool-control
        height:8px;
        width:8px;
        border:1px solid #bbb;
        position:absolute;
        border-radius:4px;
    .cool-control-left-top
        left:0;
        top:0;
        margin-top:-5px;
        margin-left:-5px;
    .cool-control-right-top
        right:0;
        top:0;
        margin-top:-5px;
        margin-right:-5px;
    .cool-control-left-bottom
        left:0;
        bottom:0;
        margin-left:-5px;
        margin-bottom:-5px;
    .cool-control-right-bottom
        right:0;
        bottom:0;
        margin-bottom:-5px;
        margin-right:-5px;
    .cool-interface
        width:8px;
        height:8px;
        border:1px solid #ccc;
        position:absolute;
    .cool-interface-left
        left:-5px;
        top:50%;
        margin-top:-4px;
    .cool-interface-top
        left:50%;
        top:-5px;
        margin-left:-4px;
    .cool-interface-right
        right:-5px;
        top:50%;
        margin-top:-4px;
    .cool-interface-bottom
        bottom:-5px;
        left:50%;
        margin-left:-4px;

.cool-ui-line
    min-width:5px;
    min-height:5px;
    position:absolute;
    // border:1px solid #eee;
    .cool-canvas
        position:absolute;
        left:0px;
        top:0px;
        width:100%;
        height:100%;
    .cool-control
        width:8px;
        height:8px;
        overflow:hidden;
        border:1px solid #aaa;
        position:absolute;
        border-radius:4px;
    .cool-ui-line-start
        left:0px;
        top:0px;
        border-color: #f00;
    .cool-ui-line-end
        right:0px;
        top:0px;
        border-color: #0f0;

    