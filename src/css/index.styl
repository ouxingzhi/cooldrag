.cool-document
    width:100%;
    height:100%;
    position:absolute;

.cool-ui-component
    width:100px;
    height:100px;
    border:1px solid #ccc;
    position:absolute;
    .cool-canvas
        width:100%;
        height:100%;
        position:absolute;
    .cool-control
        height:5px;
        width:5px;
        border:1px solid #bbb;
        position:absolute;
    .cool-control-left-top
        left:0;
        top:0;
    .cool-control-right-top
        right:0;
        top:0;
    .cool-control-left-bottom
        left:0;
        bottom:0;
    .cool-control-right-bottom
        right:0;
        bottom:0;
.cool-ui-line
    min-width:5px;
    min-height:5px;
    position:absolute;
    border:1px solid #eee;
    .cool-control
        width:8px;
        height:8px;
        overflow:hidden;
        border:1px solid #aaa;
        position:absolute;
        border-radius:4px;
    .cool-ui-line-start
        left:0px;
        top:0px;
        border-color: #f00;
    .cool-ui-line-end
        right:0px;
        top:0px;
        border-color: #0f0;